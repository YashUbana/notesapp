<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/ColorBlackNote"
    android:layout_gravity="center"
    tools:context=".enterlock">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:orientation="vertical"
        >

        <EditText
            android:id="@+id/lockedit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:drawableRight="@drawable/baseline_lock_24"
            android:hint="Enter 5 Digit Pin    "
            android:textColorHint="@color/ColorWhite"
            android:textColor="@color/ColorWhite"
            android:layout_gravity="center"
            android:maxLength="5"
            android:inputType="numberPassword">
        </EditText>

        <Button
            android:id="@+id/lockbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DONE"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_8sdp"
            android:textSize="@dimen/_22sdp"
            android:textStyle="bold"
            android:background="@drawable/mybutton">
        </Button>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="*DO NOT FORGET THIS PIN\n NOT RETRIEVABLE"
            android:textColor="#E91E63"
            android:textSize="@dimen/_15sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_15ssp"
            android:textStyle="bold">
        </TextView>




    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:visibility="gone"
        android:id="@+id/locktxt">
    </TextView>




</LinearLayout>